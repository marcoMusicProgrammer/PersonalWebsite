<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Converter</title>
    <link rel="stylesheet" href="style.css">
    <script src="libraries/p5.min.js"></script>
</head>

<body>
    <div class="container">
        <nav class="header"> 
            
            <div class="title">
                <%- include('header/header.ejs') %>
            </div>

            <ul class="pagina">
                <li >
                    <a href="/" >
                        <h2 >Home</h1>
                    </a>
                </li>
             
                <li>
                    <a href="/bio">
                        <h2>Bio</h2>
                    </a>
                </li>
       
                <li>
                    <a href="/music">
                        <h2>Music</h2>
                    </a>
                </li>

                <li>
                    <a href="/portfolio">
                        <h2>Portofolio</h2>
                    </a>
                </li>

                <li>
                    <a href="/contacts">
                        <h2>Contact</h2>
                    </a>
                </li>
            
            </ul>
        </nav>


        <div class="main">

            <div class="contact-section">
                <!-- <div id="body-section1"> -->
                    <form action="/contacts" method="post">
                        <div class="div_items-contact">
                            <div>
                                <% var testoErr, emailErr, titleErr, success
                                    if (flash){ 
                                        flash.forEach(errori => {
                                            switch (errori.path) {
                                                case "testo":
                                                    testoErr = errori.msg
                                                    break;
                                                case "mail":
                                                    emailErr = errori.msg
                                                    break;
                                                case "titolo":
                                                    titleErr = errori.msg
                                                    break;
                                                case "success":
                                                    success = errori.msg
                                                    break;
                                                default:
                                                    break;
                                            }
                                        });
                                        <!-- console.log(flash) -->
                                    } 
                                %>
                            </div>
                            <p style="color: green;"><%= success %></p>
                            <label for="mailId">Email</label>
                            <input style="background-color: grey;" type="text" name="mail" id="mailId"><span style="color: red;"><%= emailErr %></span>
                            <br>
                            <label for="titoloId">Titolo</label>
                            <input  style="background-color: grey"; type="text" name="titolo" id="titoloId"><span style="color: red;"><%= titleErr %></span>
                            <br>
                            <label for="">Testo</label>
                            <textarea  style="background-color: grey"; name="testo" id="testoId" cols="30" rows="10"></textarea><span style="color: red">
                                <%= testoErr %></span>
                            <br>
                            <button type="submit">Send</button>
                        </div>
                    </form>
                <!-- </div> -->
            </div>

        </div>

        <div class="widget">
            <button id="button-zoom-1" class="button-zoom" type="button">+</button>
            <button id="button-zoom-2" class="button-zoom" type="button">-</button>
        </div>

        <nav class="footer">
            <%- include("footer/footer.ejs") %>
            <p id="latency">Server latency: 0 ms</p>
            <a class="admin" href="/login">Admin</a>

        </nav>
    </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/tone/14.8.49/Tone.min.js"></script>
    <script src="/js/api.js"></script>
</body>

</html>